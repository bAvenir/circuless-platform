log:
  level: INFO  


entryPoints:
  web:
    address: :80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"

providers:
  docker:
    network: traefik
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
  file:
    directory: "/etc/traefik/dynamic"
    watch: true

certificatesResolvers:
  myresolver:
    acme:
      email: your-email@example.com  # Replace with actual email
      storage: acme.json
      httpChallenge:
        entryPoint: web

serversTransport:
  # ⚠️ CRITICAL: Set to false in production!
  # Only use true for self-signed certificates in development
  insecureSkipVerify: false  # Changed from true!